GDScript
# Web3Manager.gd
extends Node

var web3_api = "https://polygon-rpc.com"
var contract_address = "0x..."

func connect_wallet():
    # Sử dụng JavaScript bridge (nếu chạy web)
    JavaScript.eval("""
        window.ethereum.request({ method: 'eth_requestAccounts' })
            .then(accounts => window.godot_wallet_connected(accounts[0]))
    """)

func mint_nft(player_address, token_uri):
    var headers = ["Content-Type: application/json"]
    var body = {
        "method": "mintNFT",
        "params": [player_address, token_uri]
    }
    $HTTPRequest.request(backend_url + "/nft/mint", headers, HTTPClient.METHOD_POST, JSON.stringify(body))
